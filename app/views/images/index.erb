<div class='rowSec'>
  <div class='images-container col-8'>
      <div id='top-image' class='col-12'>
        <img src="<%= @result.top_image.values[0] %>" alt="<%= @result.top_image.keys[0] %>" style='width: 100%'>
      </div>
      <div id='additional-images' class='col-12'>
        <% @result.additional_images.each do |image| %>
        <div class='col-3'>
          <img src="<%= image.values[0] %>" alt="<%= image.keys[0] %>" style='width: 100%'>
        </div>
        <% end %>
      </div>
    </div>



  <div class='query col-2'></div>
</div>
